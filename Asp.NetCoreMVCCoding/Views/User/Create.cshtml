@model CreateViewModel

<div class="row text-center">
	<div class="col">
		<h1 class="display-3">Add New User </h1><hr />
	</div>
</div>

<form method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="row mt-4">
		<div class="col-4 offset-4">
			<div class="input-group flex-nowrap">
				<span class="input-group-text"><i class="fa-solid fa-user"></i></span>
				<input asp-for="FullName" type="text" class="form-control" placeholder="Full Name">
				<span class="text-danger" asp-validation-for="FullName"></span>
			</div>
			<div class="input-group flex-nowrap mt-3">
				<span class="input-group-text"><i class="fa-solid fa-user-plus"></i></span>
				<input asp-for="Username" type="text" class="form-control" placeholder="Username">
				<span class="text-danger" asp-validation-for="Username"></span>
			</div>
			<div class="input-group flex-nowrap mt-3">
				<span class="input-group-text"><i class="fa-solid fa-key"></i></span>
				<input asp-for="Password" type="password" class="form-control" placeholder="Password">
				<span class="text-danger" asp-validation-for="Password"></span>
			</div>
			<div class="input-group flex-nowrap mt-3">
				<span class="input-group-text"><i class="fa-solid fa-key"></i></span>
				<input asp-for="RePassword" type="password" class="form-control" placeholder="Re Password">
				<span class="text-danger" asp-validation-for="RePassword"></span>
			</div>
			<div class="form-group mt-3">
				<select asp-for="Role" class="form-select">
				<option selected>Please Selected Role</option>
				<option value="admin">Admin</option>
				<option value="user">User</option>
			</select>
				<span asp-validation-for="Role"></span>
			</div>
			<div class="form-check mt-3">
				<input asp-for="Locked" class="form-check-input px-2 py-2" type="checkbox">
				<label asp-for="Locked" class="form-check-label">
					Locked
				</label>
			</div>
			<div class="mt-3 text-end">
				<button type="submit" class="btn btn-secondary"><i class="fa-solid fa-floppy-disk"></i> Save</button>
			</div>
		</div>
	</div>
</form>
