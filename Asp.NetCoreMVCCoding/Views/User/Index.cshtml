@using Asp.NetCoreMVCCoding.Datas;
@model List<User>

<div>
	<h1 class="display-3">Users</h1><hr />
</div>

<div class="row mt-4">
	<div class="col">
		<table class="table table-hover table-striped table-bordered text-center">
			<thead>
				<tr>
					<th>Full Name</th>
					<th>Username</th>
					<th>Locked</th>
					<th>Role</th>
					<th>Created At</th>
					<th><i class="fa-solid fa-pen-nib me-3"></i><i class="fa-solid fa-trash-can"></i></th>
				</tr>
			</thead>
			<tbody>
				@foreach (User user in Model)
				{
					<tr>
						<td>@user.FullName</td>
						<td>@user.Username</td>
						<td>
							@if (user.Locked == true)
							{
								<span class="text-success"><i class="fa-solid fa-check"></i></span>
							}
							else
							{
								<span class="text-danger"><i class="fa-solid fa-xmark"></i></span>
							}
						</td>
						<td>@user.Role</td>
						<td>@user.CreatedAt</td>
						<td>
							<a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-secondary btn-sm me-2 px-3">Edit</a>
							<a asp-action="Delete" asp-route-id="@user.Id" onclick="return confirm('Are you sure want to delete @user.Username ?')" class="btn btn-outline-secondary btn-sm">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<div class="row mt-2">
	<div class="col-2 offset-10 d-grid">
		<a asp-action="Create" class="btn btn-primary py-2"><i class="fa-solid fa-user-plus"></i> Add User</a>
	</div>
</div>