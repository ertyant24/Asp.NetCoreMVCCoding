<div class="mb-3">
	<h1 class="display-3">- Profile -</h1><hr />
</div>

<div class="row mt-4">
	<div class="col-4">
		<div class="mb-4">
			<div asp-validation-summary="All" class="text-danger small"></div>
		</div>
		<form method="post" asp-action="ProfileChangeFullName">
			<label class="form-label">Name Surname</label>
			<div class="input-group mb-3">
				<input name="fullname" type="text" class="form-control" placeholder="Enter to Name and Surname" value="@ViewData["FullName"]">
				<button class="btn btn-outline-secondary" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save</button>
			</div>
		</form>
		<form method="post" asp-action="ProfileChangePassword">
			<label class="form-label">Password</label>
			<div class="input-group">
				<input name="password" type="password" class="form-control" placeholder="Enter to Password">
				<button class="btn btn-outline-secondary" type="submit"><i class="fa-solid fa-floppy-disk"></i> Save</button>
			</div>
			@*@if(ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
			{
				<span class="text-success small">
					Password Updated.
				</span>
			}*@
		</form>
	</div>
</div>


@section Scripts{
	@if(ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
	{
		<script>
			toastr.success('Password Updated', 'Password');
		</script>
	}
}