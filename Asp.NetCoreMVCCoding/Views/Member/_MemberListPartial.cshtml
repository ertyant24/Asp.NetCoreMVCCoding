@using Asp.NetCoreMVCCoding.Datas;
@model List<User>

<table class="table table-hover table-striped table-bordered text-center">
	<thead>
		<tr>
			<th>Full Name</th>
			<th>Username</th>
			<th>Locked</th>
			<th>Role</th>
			<th>Created At</th>
			<th><i class="fa-solid fa-pen-nib me-3"></i><i class="fa-solid fa-trash-can"></i></th>
		</tr>
	</thead>
	<tbody>
		@foreach (User user in Model)
		{
			<tr>
				<td>@user.FullName</td>
				<td>@user.Username</td>
				<td>
					@if (user.Locked == true)
					{
						<span class="text-success"><i class="fa-solid fa-check"></i></span>
					}
					else
					{
						<span class="text-danger"><i class="fa-solid fa-xmark"></i></span>
					}
				</td>
				<td>@user.Role</td>
				<td>@user.CreatedAt</td>
				<td>
					<a asp-action="EditMemberPartial" asp-route-id="@user.Id" class="btn btn-secondary btn-sm me-2 px-3" data-ajax="true" data-bs-toggle="modal" data-bs-target="#modalEdit" data-ajax-method="get" data-ajax-update="#modalEditContent">Edit</a>
					<a asp-action="DeleteMemberPartial" asp-route-id="@user.Id" class="btn btn-outline-secondary btn-sm" data-ajax="true" data-bs-toggle="modal" data-bs-target="#modalDelete" data-ajax-method="get" data-ajax-update="#modalDeleteContent">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>