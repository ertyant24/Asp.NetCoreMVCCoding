@model EditViewModel


<div class="modal-header">
	<h5 class="modal-title">Update Member</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	<form id="frmUpdateMember" asp-action="EditMember" method="post" data-ajax="true" data-ajax-method="post" data-ajax-update="#modalEditContent">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<div class="row mt-4">
			<div class="col-6 offset-3">
				<div class="input-group flex-nowrap">
					<span class="input-group-text"><i class="fa-solid fa-user"></i></span>
					<input asp-for="FullName" type="text" class="form-control" placeholder="Full Name">
					<span class="text-danger" asp-validation-for="FullName"></span>
				</div>
				<div class="input-group flex-nowrap mt-3">
					<span class="input-group-text"><i class="fa-solid fa-user-plus"></i></span>
					<input asp-for="Username" type="text" class="form-control" placeholder="Username">
					<span class="text-danger" asp-validation-for="Username"></span>
				</div>
				<div class="form-group mt-3">
					<select asp-for="Role" class="form-select">
						<option selected>Please Selected Role</option>
						<option value="admin">Admin</option>
						<option value="user">User</option>
					</select>
					<span asp-validation-for="Role"></span>
				</div>
				<div class="form-check mt-3">
					<input asp-for="Locked" class="form-check-input px-2 py-2" type="checkbox">
					<label asp-for="Locked" class="form-check-label">
						Locked
					</label>
				</div>
			</div>
		</div>
		<input type="hidden" asp-for="Id" />
	</form>
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal"><i class="fa-solid fa-circle-xmark"></i> Close</button>
	<button id="btnSave" type="submit" class="btn btn-outline-secondary btn-sm" form="frmUpdateMember"><i class="fa-solid fa-floppy-disk"></i> Save</button>
</div>


